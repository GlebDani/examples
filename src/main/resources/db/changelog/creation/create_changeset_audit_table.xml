<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create_sequence_for_audit_table" author="GD">
        <createSequence sequenceName="seq_sequence_for_audit_table"
                        dataType="bigint"
                        schemaName="entity"
                        incrementBy="1"
                        minValue="1"
                        startValue="1"/>
    </changeSet>


    <changeSet id="create_audit_table" author="GD">
        <!-- Прописываем создание таблицы genre-->
        <createTable tableName="audit" schemaName="entity">
            <!--Создаем поля -->
            <column name="action_id" type="bigint" defaultValueComputed="nextval('entity.seq_sequence_for_audit_table')">>
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="date" type="varchar(64)">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar(64)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="add_fk_userId_for_audit_table" author="GD">
        <addForeignKeyConstraint baseTableSchemaName="entity"
                                 baseColumnNames="user_id"
                                 baseTableName="audit"
                                 constraintName="fk_user_id_audit"
                                 referencedTableSchemaName="entity"
                                 referencedColumnNames="user_id"
                                 referencedTableName="user"/>
    </changeSet>
</databaseChangeLog>