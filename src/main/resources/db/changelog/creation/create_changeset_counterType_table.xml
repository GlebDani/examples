<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create_sequence_for_counterType_table" author="GD">
        <createSequence sequenceName="sequence_for_countertype_table"
                        dataType="bigint"
                        schemaName="entity"
                        incrementBy="1"
                        minValue="1"
                        startValue="1"/>
    </changeSet>

    <changeSet id="create_counterType_table" author="GD">
        <!-- Прописываем создание таблицы genre-->
        <createTable tableName="countertype" schemaName="entity">
            <!--Создаем поля -->
            <column name="countertype_id" type="bigint" defaultValueComputed="nextval('entity.sequence_for_countertype_table')">>
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="description" type="varchar(64)">
                <constraints nullable="false" unique="true"/>
            </column>

        </createTable>
    </changeSet>
</databaseChangeLog>